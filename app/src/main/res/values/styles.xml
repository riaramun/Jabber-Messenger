<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="CredentialsText">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">28dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CredentialsEditText" parent="CredentialsText">
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:background">@drawable/edit_text_login_border_selector</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="RiaProgressBar">
        <item name="android:id">@id/progress_bar</item>
        <item name="android:indeterminate">true</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:background">#1161BE</item>
    </style>

    <style name="commonListItemStyle">
        <!--<item name="android:translationZ">@dimen/list_item_translation_z</item>-->
    </style>

    <style name="ListItemTextViewStyle">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:id">@id/contact_name</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:text">""</item>
        <item name="android:textColor">@color/list_Item_title_color_black</item>
        <item name="android:textSize">@dimen/list_item_title_text_size</item>
    </style>

    <style name="AppMessageView">
        <item name="android:id">@id/app_message_view</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:layout_marginTop">?android:attr/actionBarSize</item>-->
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="LoginViewIconImage">
        <item name="android:layout_width">@dimen/icon_img_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/icon_img_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="ButtonFloatNewChat">
        <item name="android:id">@id/buttonFloat</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@color/floating_buton_color</item>
    </style>

    <style name="RecyclerViewCommon">
        <item name="android:id">@id/recycler_view</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="MessageTodayTomorrowDateStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#777777</item>
        <item name="android:background">#E5E5E5</item>
    </style>

    <style name="MessageCreatedDateStyle">
        <item name="android:id">@id/message_created_date</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#777777</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="UserOnlineStatusStyle">
        <item name="android:id">@id/user_online_status</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@drawable/status_offline</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:text">""</item>
    </style>

</resources>
