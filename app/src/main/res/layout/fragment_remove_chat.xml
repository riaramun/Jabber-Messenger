<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:recyclerviewfastscroller="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:clickable="false"
    android:background="@android:drawable/screen_background_dark_transparent">

    <RelativeLayout
        android:id="@+id/chat_remove_buttton"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/list_item_bg_selector">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="false"
            android:orientation="horizontal">

            <com.malinskiy.materialicons.widget.IconTextView
                style="@style/LoginViewIconImage"
                android:text="{zmdi-delete}" />

            <com.devspark.robototextview.widget.RobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remove_chat"
                android:textSize="18dp"
                app:fontFamily="roboto"
                app:textWeight="bold" />

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>
